<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".Main">

    <Toolbar
        android:id="@+id/game_toolbar"
        style="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toolbarLogo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/mathlogo"
            android:elevation="20dp"/>

        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/app_name"
            android:gravity="left"
            android:layout_marginLeft="20dp"/>
    </Toolbar> <!-- Toolbar-->

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.60"
        android:orientation="vertical" /> <!-- GuideLine-->

    <TextView
        style="@style/SmallBox"
        android:id="@+id/correctCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        android:background="@drawable/rounded_corners_green"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        /> <!-- correctCounter-->

    <TextView
        style="@style/SmallBox"
        android:id="@+id/wrongCounter"
        app:layout_constraintRight_toLeftOf="@id/progressCounter"
        app:layout_constraintLeft_toRightOf="@id/correctCounter"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        android:background="@drawable/rounded_corners_red"
        android:layout_marginTop="20dp"
        /> <!-- WrongCounter-->

    <TextView
        style="@style/SmallBox"
        android:id="@+id/progressCounter"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        android:background="@drawable/rounded_corners_blue"
        android:layout_marginTop="20dp"
        android:layout_marginRight="110dp"
        /> <!-- progressCounter-->

    <TextView
        android:id="@+id/EqDisplayBox"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="100sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/correctCounter"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressBar" /> <!-- eqDisplayBox-->

    <EditText
        android:id="@+id/eqInputBox"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/> <!-- eqInputBox-->

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="0.5"
        android:weightSum="1"
        /><!-- Backround behind Buttons -->

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="0"


        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintBottom_toTopOf="@id/eqInputBox"
        app:layout_constraintStart_toStartOf="parent"
        android:progressBackgroundTint="@color/Colorerase"
        android:progressTint="@color/Colorok"




        /> <!-- ProgressBar-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b1"
        android:text="@string/b1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        app:layout_constraintBottom_toTopOf="@id/b4"
        app:layout_constraintRight_toLeftOf="@id/b2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        android:onClick="number1"
        android:backgroundTint="@color/Color1"


        /> <!-- btn1-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b2"
        android:text="@string/b2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        app:layout_constraintBottom_toTopOf="@id/b5"
        app:layout_constraintRight_toLeftOf="@id/b3"
        app:layout_constraintLeft_toRightOf="@id/b1"
        android:onClick="number2"
        android:backgroundTint="@color/Color2"
        /> <!-- btn2-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b3"
        android:text="@string/b3"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/game_toolbar"
        app:layout_constraintBottom_toTopOf="@id/b6"
        app:layout_constraintLeft_toRightOf="@id/b2"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="number3"
        android:backgroundTint="@color/Color3"
        /> <!-- btn3-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b4"
        android:text="@string/b4"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintBottom_toTopOf="@id/b7"
        app:layout_constraintRight_toLeftOf="@id/b5"
        app:layout_constraintStart_toStartOf="@id/guideline"
        android:onClick="number4"
        android:backgroundTint="@color/Color4"
        /> <!-- btn4-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b5"
        android:text="@string/b5"
        app:layout_constraintTop_toBottomOf="@id/b2"
        app:layout_constraintBottom_toTopOf="@id/b8"
        app:layout_constraintRight_toLeftOf="@id/b6"
        app:layout_constraintLeft_toRightOf="@id/b4"
        android:onClick="number5"
        android:backgroundTint="@color/Color5"
        /> <!-- btn5-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b6"
        android:text="@string/b6"
        app:layout_constraintTop_toBottomOf="@id/b3"
        app:layout_constraintBottom_toTopOf="@id/b9"
        app:layout_constraintLeft_toRightOf="@id/b5"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="number6"
        android:backgroundTint="@color/Color6"
        /> <!-- btn6-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b7"
        android:text="@string/b7"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintBottom_toTopOf="@id/bBlank"
        app:layout_constraintRight_toLeftOf="@id/b8"
        app:layout_constraintStart_toStartOf="@id/guideline"
        android:onClick="number7"
        android:backgroundTint="@color/Color7"
        /> <!-- btn7-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b8"
        android:text="@string/b8"
        app:layout_constraintTop_toBottomOf="@id/b5"
        app:layout_constraintBottom_toTopOf="@id/b0"
        app:layout_constraintRight_toLeftOf="@id/b9"
        app:layout_constraintLeft_toRightOf="@id/b7"
        android:onClick="number8"
        android:backgroundTint="@color/Color8"
        /> <!-- btn8-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b9"
        android:text="@string/b9"
        app:layout_constraintTop_toBottomOf="@id/b6"
        app:layout_constraintBottom_toTopOf="@id/bSum"
        app:layout_constraintLeft_toRightOf="@id/b8"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="number9"
        android:backgroundTint="@color/Color9"
        /> <!-- btn9-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/bBlank"
        android:text="@string/bBlank"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/b7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        android:onClick="backspace"
        android:backgroundTint="@color/Colorerase"
        /> <!-- btnErase-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/b0"
        android:text="@string/b0"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/b8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bBlank"
        app:layout_constraintRight_toLeftOf="@id/bSum"
        android:onClick="number0"
        android:backgroundTint="@color/Color0"
        /> <!-- btn0-->

    <Button
        style="@style/NumberButtonsLand"
        android:id="@+id/bSum"
        android:text="@string/bSum"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/b9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/b0"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="nextQuestion"
        android:backgroundTint="@color/Colorok"
        /> <!-- btnSum-->


</android.support.constraint.ConstraintLayout>