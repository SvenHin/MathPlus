<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics"
    android:id="@+id/relativeLayout2"
    android:background="@color/colorPrimaryLight">

    <Toolbar
        android:id="@+id/stat_toolbar"
        style="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/toolbarLogo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/mathlogo"
            android:elevation="20dp"/>
        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/stat_title"/>
    </Toolbar>

    <Button
        android:id="@+id/wipeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NumberButtons"
        android:textSize="15sp"
        android:text="@string/wipeStat"
        android:backgroundTint="@color/Color8"
        android:onClick="wipeStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stat_toolbar"
        android:layout_margin="6dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:id="@+id/view1"
        app:layout_constraintTop_toBottomOf="@id/wipeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/lastRunTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/lastRunTitle"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1"/>

    <TextView
        style="@style/SmallBox"
        android:id="@+id/lastRunPoints"
        android:background="@drawable/rounded_corners_green"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/lastRunTitle"
        app:layout_constraintRight_toLeftOf="@id/lastRunWrongs"
        app:layout_constraintTop_toTopOf="@id/view1"
        />

    <TextView
        style="@style/SmallBox"
        android:id="@+id/lastRunWrongs"
        android:background="@drawable/rounded_corners_red"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/lastRunPoints"
        app:layout_constraintRight_toLeftOf="@id/lastRunQuestions"
        app:layout_constraintTop_toTopOf="@id/view1"

        />

    <TextView
        style="@style/SmallBox"
        android:id="@+id/lastRunQuestions"
        android:background="@drawable/rounded_corners_blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/lastRunWrongs"
        app:layout_constraintTop_toTopOf="@id/view1"

        />

    <TextView
        android:id="@+id/lastRunPercent"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@color/Color6"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/lastRunQuestions"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="@id/view1"
        android:textColor="@color/white"/>

    <View
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:id="@+id/view2"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/totalTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/totalTitle"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@id/view2"/>

    <TextView
        style="@style/SmallBox"
        android:id="@+id/totalPoints"
        android:background="@drawable/rounded_corners_green"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintLeft_toRightOf="@id/totalTitle"
        app:layout_constraintRight_toLeftOf="@id/totalWrongs"
        />

    <TextView
        style="@style/SmallBox"
        android:id="@+id/totalWrongs"
        android:background="@drawable/rounded_corners_red"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintLeft_toRightOf="@id/totalPoints"
        app:layout_constraintRight_toLeftOf="@id/totalQuestions"
        />

    <TextView
        style="@style/SmallBox"
        android:id="@+id/totalQuestions"
        android:background="@drawable/rounded_corners_blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintLeft_toRightOf="@id/totalWrongs"
        />

    <TextView
        android:id="@+id/totalPercent"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@color/Color6"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/totalTitle"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        android:textColor="@color/white"/>

</android.support.constraint.ConstraintLayout>